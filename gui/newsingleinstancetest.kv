#: import output_testing_gui output_testing_gui

<HorizontalBoxLayout@BoxLayout>:
    orientation: 'horizontal'


<VerticalBoxLayout@BoxLayout>:
    orientation: 'vertical'


<ChampionNameMenu@ScrollViewLayout>


<PlayerChampionAndLvl@HorizontalBoxLayout>
    VerticalBoxLayout:

        VerticalBoxLayout:
            spacing: 5

            ChampionButton:
                id: champion_button
            ChampionLvlsDropDownList
            Label




<PlayerItems@GridLayout>
    cols: 3
    rows: 2

    ItemButton
    ItemButton
    ItemButton
    ItemButton
    ItemButton
    ItemButton


<SkillIncreaseWidget@AnchorLayout>:
    anchor_x: 'center'
    anchor_y: 'bottom'

    Button:
        size_hint: 0.5, 0.5
        text: '+'

<SkillDecreaseWidget@AnchorLayout>:
    anchor_x: 'center'
    anchor_y: 'top'

    Button:
        size_hint: 0.5, 0.5
        text: '-'

<NonUltSkillWidget@VerticalBoxLayout>:

    ability_name: ''
    champion_name: output_testing_gui.selected_champion

    Image:
        source: output_testing_gui.spell_icon_path(champion_name=root.champion_name, ability_name=root.ability_name)
        pos_hint_y:
            'top'
    NonUltimateAbilityLvlsDropDownList
    Widget
    Widget
    Widget

<UltSkillWidget@VerticalBoxLayout>:

    ability_name: ''
    champion_name: output_testing_gui.selected_champion

    Image:
        source: output_testing_gui.spell_icon_path(champion_name=root.champion_name, ability_name=root.ability_name)
        pos_hint_y:
            'top'
    UltimateAbilityLvlsDropDownList
    Widget
    Widget
    Widget

<PlayerAbilitiesLvlsWidget@HorizontalBoxLayout>
    NonUltSkillWidget:
        ability_name: 'q'
    NonUltSkillWidget
        ability_name: 'w'
    NonUltSkillWidget
        ability_name: 'e'
    UltSkillWidget
        ability_name: 'r'

<PlayerRotationPriorities@HorizontalBoxLayout>


<PlayerExternalVariables@HorizontalBoxLayout>


<SingleEnemySelectionWidget@DropDown>
    Button:
        text: 'b 1'
    Button:
        text: 'b 2'
    Button:
        text: 'b 1'


<EnemiesNames@VerticalBoxLayout>
    SingleEnemySelectionWidget

<MainWidget>:
    do_default_tab: False

    TabbedPanelItem:
        text: 'General'

        VerticalBoxLayout:
            HorizontalBoxLayout:
                PlayerChampionAndLvl:
                PlayerItems
                PlayerAbilitiesLvlsWidget
                PlayerRotationPriorities
                PlayerExternalVariables
                EnemiesNames

            HorizontalBoxLayout:
                Label:
                    text: 'horiz box 2'
            HorizontalBoxLayout:
                Label:
                    text: 'horiz box 3'

    TabbedPanelItem:
        text: 'Masteries'

    TabbedPanelItem:
        text: 'Runes'

    TabbedPanelItem:
        text: 'Enemies'





        canvas.after:
            Color:
                rgba: (1,0,0,.5)
            Rectangle:
                pos: self.pos
                size: self.size
